# =============================================================================
# Real-Time AI Avatar - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Configuration (Required - pick one provider)
# -----------------------------------------------------------------------------
# Provider options: ollama, groq, openai
LLM_PROVIDER=groq

# Groq API (Recommended - fast and free tier available)
# Get your API key at: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API (Optional)
# Get your API key at: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Ollama (Optional - for fully local LLM)
# Install from: https://ollama.ai/
OLLAMA_HOST=http://localhost:11434

# Model names per provider
LLM_OLLAMA_MODEL=llama3:8b
LLM_GROQ_MODEL=llama-3.3-70b-versatile
LLM_OPENAI_MODEL=gpt-4o

# Generation parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=256

# -----------------------------------------------------------------------------
# Text-to-Speech Configuration
# -----------------------------------------------------------------------------
# Provider options: piper (FREE, recommended), kokoro, elevenlabs, local
# - piper: FREE high-quality neural TTS (default, works great on Linux/AWS)
# - kokoro: Fast local TTS (Windows/macOS)
# - elevenlabs: Cloud TTS (paid, requires API key)
# - local: pyttsx3/espeak fallback (low quality)
VOICE_TTS_PROVIDER=piper

# Piper TTS Settings (FREE neural TTS - recommended)
# Voices: en_US-lessac-medium, en_US-ryan-medium, en_GB-alan-medium, en_US-libritts-high
VOICE_PIPER_MODEL=en_US-lessac-medium

# Kokoro Settings (Windows/macOS local TTS)
# Voices: af_heart, af_bella, af_nicole, am_adam, am_michael, bf_emma, bm_george
VOICE_KOKORO_VOICE=af_heart
VOICE_KOKORO_SPEED=1.0

# ElevenLabs Settings (Optional - paid cloud TTS)
# Get your API key at: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
VOICE_STABILITY=0.5
VOICE_SIMILARITY_BOOST=0.75
VOICE_STYLE=0.0
VOICE_MODEL_ID=eleven_multilingual_v2

# -----------------------------------------------------------------------------
# Whisper (Speech-to-Text) Configuration
# -----------------------------------------------------------------------------
# Model size: tiny, base, small, medium, large, large-v3
WHISPER_MODEL_SIZE=base

# Device: cuda or cpu
WHISPER_DEVICE=cuda

# -----------------------------------------------------------------------------
# LiveAvatar (Lip-Sync) Configuration
# -----------------------------------------------------------------------------
# VRAM Requirements:
#   - Single GPU: 48GB+ VRAM required (A100 40GB with FP8, or A100 80GB)
#   - Multi-GPU: 4x 24GB GPUs = 96GB total (e.g., g5.12xlarge with 4x A10G)
#
# For g5.12xlarge (4x A10G, 24GB each): Set MULTI_GPU=true, USE_FP16=true
# For p4d.24xlarge (8x A100, 40GB each): Set MULTI_GPU=false, USE_FP8=true
#
LIVEAVATAR_FPS=24
LIVEAVATAR_DEVICE=cuda
LIVEAVATAR_USE_FP8=false
LIVEAVATAR_USE_FP16=true
LIVEAVATAR_SAMPLING_STEPS=10
LIVEAVATAR_MULTI_GPU=true
LIVEAVATAR_INFER_FRAMES=81

# -----------------------------------------------------------------------------
# Avatar Personality
# -----------------------------------------------------------------------------
AVATAR_NAME=Aria

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_SHOW_PREVIEW=true
APP_WINDOW_TITLE=AI Avatar

# Queue sizes (increase if experiencing lag)
APP_AUDIO_QUEUE_SIZE=50
APP_FRAME_QUEUE_SIZE=30
